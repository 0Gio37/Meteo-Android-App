<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.DemoActivity"
    android:orientation="vertical">

    <Button
        android:id="@+id/demo_btn_supp_table"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vider la liste des favoris"
        android:backgroundTint="@color/red"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/demo_recycler_view"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/demo_btn_supp_table"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:showIn="@layout/activity_favorite"/>
    <Button
        android:id="@+id/demo_btn_ajout_ville"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ajouter une nouvelle ville"
        android:backgroundTint="@color/black"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
    />

</RelativeLayout>