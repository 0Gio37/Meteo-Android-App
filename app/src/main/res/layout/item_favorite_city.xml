<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linear_layout_single_item_city"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:minHeight="80dp"
    android:orientation="horizontal"
    android:onClick="onClickLinear"
    >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_weight="1"
            android:gravity="start"
            android:orientation="vertical">
            <TextView
                android:id="@+id/text_view_single_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="monte-carlo"
                android:textColor="@color/black"
                android:textSize="@dimen/h3" />
            <TextView
                android:id="@+id/text_view_single_item_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="meteo du jour"
                android:textColor="@color/king_blue"
                android:textSize="@dimen/p" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:gravity="end"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/image_view_single_item_picto"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginRight="20dp"
                android:src="@drawable/weather_sunny_grey" />
            <TextView
                android:id="@+id/text_view_single_item_temp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20Â°C"
                android:textColor="@color/king_blue"
                android:textSize="@dimen/h2" />
        </LinearLayout>
</LinearLayout>