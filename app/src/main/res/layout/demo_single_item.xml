<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:minHeight="80dp"
    android:orientation="horizontal"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_weight="1"
        android:gravity="start"
        android:orientation="vertical">
        <TextView
            android:id="@+id/demo_single_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="monte-carlo"
            android:textColor="@color/black"
            android:textSize="@dimen/h3" />
        <TextView
            android:id="@+id/demo_single_item_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="meteo du jour"
            android:textColor="@color/king_blue"
            android:textSize="@dimen/p" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginRight="5dp"
        android:layout_weight="1"
        android:gravity="end"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/demo_single_item_temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/king_blue"
            android:text="23"
            android:textSize="@dimen/h2" />
        <TextView
            android:id="@+id/demo_single_item_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/king_blue"
            android:text="Â°C"
            android:textSize="@dimen/h2" />
    </LinearLayout>
</LinearLayout>